        function populateTable(clients = allClients, viewType = 'pickup') {
            const tbody = document.getElementById('clientTableBody');
            const headers = document.getElementById('tableHeaders');
            tbody.innerHTML = '';
            currentFilteredData = clients;
            
            // Set headers based on view type
            if (viewType === 'pickup') {
                headers.innerHTML = `
                    <th>#</th>
                    <th>Client Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>ART Number</th>
                    <th>Next Visit</th>
                    <th>Due for VL</th>
                `;
            } else if (viewType === 'vl') {
                headers.innerHTML = `
                    <th>#</th>
                    <th>Client Name</th>
                    <th>Phone</th>
                    <th>ART Number</th>
                    <th>Sex</th>
                `;
            } else {
                headers.innerHTML = `
                    <th>#</th>
                    <th>Client Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>ART Number</th>
                `;
            }

            if (clients.length === 0) {
                const colSpan = viewType === 'pickup' ? 7 : viewType === 'vl' ? 5 : 5;
                tbody.innerHTML = `<tr><td colspan="${colSpan}" class="no-clients">No clients match your search criteria.</td></tr>`;
                return;
            }

            clients.forEach((client, index) => {
                const row = document.createElement('tr');
                const serialNumber = index + 1;
                
                if (viewType === 'pickup') {
                    row.innerHTML = `
                        <td class="serial-number">${serialNumber}</td>
                        <td><strong>${client.name}</strong></td>
                        <td class="phone">${client.phone || 'N/A'}</td>
                        <td>${client.address}</td>
                        <td class="art-number">${client.artNumber}</td>
                        <td class="date">${client.nextVisit}</td>
                        <td><span class="vl-badge vl-${client.vlDue.toLowerCase()}">${client.vlDue === 'Y' ? 'YES' : 'NO'}</span></td>
                    `;
                } else if (viewType === 'vl') {
                    row.innerHTML = `
                        <td class="serial-number">${serialNumber}</td>
                        <td><strong>${client.name}</strong><span class="vl-badge-table">VL DUE</span></td>
                        <td class="phone">${client.phone || 'N/A'}</td>
                        <td class="art-number">${client.artNumber}</td>
                        <td>${client.sex}</td>
                    `;
                } else {
                    row.innerHTML = `
                        <td class="serial-number">${serialNumber}</td>
                        <td><strong>${client.name}</strong><span class="index-badge">INDEX</span></td>
                        <td class="phone">${client.phone || 'N/A'}</td>
                        <td>${client.address}</td>
                        <td class="art-number">${client.artNumber}</td>
                    `;
                }
                tbody.appendChild(row);
            });
        }

        function calculateStats() {
            const totalClients = clientsData.length;
            const vlDueCount = vlDueData.length;
            const indexBacklogCount = indexBacklogData.length;

            document.getElementById('totalClients').textContent = totalClients;
            document.getElementById('vlDue').textContent = vlDueCount;
            document.getElementById('indexBacklog').textContent = indexBacklogCount;
        }

        function searchClients() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            let dataToSearch;
            
            if (currentView === 'pickup') {
                dataToSearch = clientsData;
            } else if (currentView === 'vl') {
                dataToSearch = vlDueData;
            } else {
                dataToSearch = indexBacklogData;
            }
            
            const filteredClients = dataToSearch.filter(client => 
                client.name.toLowerCase().includes(searchTerm) ||
                (client.address && client.address.toLowerCase().includes(searchTerm)) ||
                client.artNumber.toLowerCase().includes(searchTerm) ||
                (client.phone && client.phone.toLowerCase().includes(searchTerm)) ||
                (client.sex && client.sex.toLowerCase().includes(searchTerm))
            );
            
            if (isListVisible) {
                populateTable(filteredClients, currentView);
            }
        }

        function downloadExcel() {
            if (currentFilteredData.length === 0) {
                alert('No data to download');
                return;
            }

            let csvContent = '';
            let filename = '';
            
            if (currentView === 'pickup') {
                csvContent = 'Serial No,Client Name,Phone,Address,ART Number,Next Visit,Due for VL\n';
                filename = 'pharmacy_pickup_list.csv';
                currentFilteredData.forEach((client, index) => {
                    csvContent += `${index + 1},"${client.name}","${client.phone || 'N/A'}","${client.address}","${client.artNumber}","${client.nextVisit}","${client.vlDue === 'Y' ? 'YES' : 'NO'}"\n`;
                });
            } else if (currentView === 'vl') {
                csvContent = 'Serial No,Client Name,Phone,ART Number,Sex\n';
                filename = 'viral_load_due_list.csv';
                currentFilteredData.forEach((client, index) => {
                    csvContent += `${index + 1},"${client.name}","${client.phone || 'N/A'}","${client.artNumber}","${client.sex}"\n`;
                });
            } else {
                csvContent = 'Serial No,Client Name,Phone,Address,ART Number\n';
                filename = 'index_backlog_list.csv';
                currentFilteredData.forEach((client, index) => {
                    csvContent += `${index + 1},"${client.name}","${client.phone || 'N/A'}","${client.address}","${client.artNumber}"\n`;
                });
            }

            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', filename);
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        function downloadPDF() {
            if (currentFilteredData.length === 0) {
                alert('No data to download');
                return;
            }

            // Create a simple HTML content for PDF
            let htmlContent = `
                <html>
                <head>
                    <title>${currentView === 'pickup' ? 'Pharmacy Pickup List' : currentView === 'vl' ? 'Viral Load Due List' : 'Index Backlog List'}</title>
                    <style>
                        body { font-family: Arial, sans-serif; margin: 20px; }
                        h1 { color: #2c3e50; text-align: center; }
                        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
                        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
                        th { background-color: #f2f2f2; font-weight: bold; }
                        tr:nth-child(even) { background-color: #f9f9f9; }
                        .serial { text-align: center; font-weight: bold; }
                        .footer { text-align: center; margin-top: 20px; font-size: 12px; color: #666; }
                    </style>
                </head>
                <body>
                    <h1>${currentView === 'pickup' ? 'Pharmacy Pickup List' : currentView === 'vl' ? 'Viral Load Due List' : 'Index Backlog List'}</h1>
                    <p>Generated on: ${new Date().toLocaleDateString()}</p>
                    <table>
                        <thead>
                            <tr>
            `;

            if (currentView === 'pickup') {
                htmlContent += '<th>#</th><th>Client Name</th><th>Phone</th><th>Address</th><th>ART Number</th><th>Next Visit</th><th>Due for VL</th>';
            } else if (currentView === 'vl') {
                htmlContent += '<th>#</th><th>Client Name</th><th>Phone</th><th>ART Number</th><th>Sex</th>';
            } else {
                htmlContent += '<th>#</th><th>Client Name</th><th>Phone</th><th>Address</th><th>ART Number</th>';
            }

            htmlContent += `
                            </tr>
                        </thead>
                        <tbody>
            `;

            currentFilteredData.forEach((client, index) => {
                htmlContent += '<tr>';
                htmlContent += `<td class="serial">${index + 1}</td>`;
                htmlContent += `<td>${client.name}</td>`;
                htmlContent += `<td>${client.phone || 'N/A'}</td>`;
                
                if (currentView === 'pickup') {
                    htmlContent += `<td>${client.address}</td>`;
                    htmlContent += `<td>${client.artNumber}</td>`;
                    htmlContent += `<td>${client.nextVisit}</td>`;
                    htmlContent += `<td>${client.vlDue === 'Y' ? 'YES' : 'NO'}</td>`;
                } else if (currentView === 'vl') {
                    htmlContent += `<td>${client.artNumber}</td>`;
                    htmlContent += `<td>${client.sex}</td>`;
                } else {
                    htmlContent += `<td>${client.address}</td>`;
                    htmlContent += `<td>${client.artNumber}</td>`;
                }
                
                htmlContent += '</tr>';
            });

            htmlContent += `
                        </tbody>
                    </table>
                    <div class="footer">
                        <p>Total Records: ${currentFilteredData.length}</p>
                        <p>Pharmacy Pickup Dashboard - Generated Report</p>
                    </div>
                </body>
                </html>
            `;

            // Open in new window for printing/saving as PDF
            const newWindow = window.open('', '_blank');
            newWindow.document.write(htmlContent);
            newWindow.document.close();
            
            // Trigger print dialog
            setTimeout(() => {
                newWindow.print();
            }, 500);
        }

        // Initialize stats on page load
        document.addEventListener('DOMContentLoaded', function() {
            calculateStats();
            // Show main dashboard by default
            navigateToSection('dashboard');
        });

        // Add keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.key === 'f') {
                e.preventDefault();
                if (isListVisible) {
                    document.getElementById('searchInput').focus();
                }
            }
            if (e.key === 'Escape') {
                document.getElementById('searchInput').value = '';
                if (isListVisible) {
                    searchClients();
                }
                closeMainMenu();
            }
        });
    </script>
</body>
</html>
