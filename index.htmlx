        function toggleMainMenu() {
            const overlay = document.querySelector('.menu-overlay');
            const menuContent = document.querySelector('.menu-content');
            
            overlay.style.display = 'block';
            menuContent.classList.add('active');
        }

        function closeMainMenu() {
            const overlay = document.querySelector('.menu-overlay');
            const menuContent = document.querySelector('.menu-content');
            
            overlay.style.display = 'none';
            menuContent.classList.remove('active');
        }

        function navigateToSection(section) {
            closeMainMenu();
            currentSection = section;
            
            // Update menu item active states
            document.querySelectorAll('.menu-item').forEach(item => item.classList.remove('active'));
            
            const headerTitle = document.getElementById('headerTitle');
            const headerSubtitle = document.getElementById('headerSubtitle');
            const backButton = document.querySelector('.back-button');
            const statsSection = document.getElementById('statsSection');
            const controlsSection = document.getElementById('controlsSection');
            const clientList = document.getElementById('clientList');
            const dashboardContent = document.getElementById('dashboardContent');
            
            // Hide all sections first
            clientList.classList.remove('show');
            controlsSection.classList.remove('show');
            dashboardContent.classList.remove('hide');
            isListVisible = false;
            
            if (section === 'dashboard') {
                document.querySelector('.menu-item:nth-child(1)').classList.add('active');
                headerTitle.textContent = 'Pharmacy Pickup Dashboard';
                headerSubtitle.textContent = 'Manage and track pending pharmacy pickups';
                backButton.classList.remove('show');
                statsSection.style.display = 'grid';
                dashboardContent.classList.remove('hide');
            } else if (section === 'pharmacy') {
                document.querySelector('.menu-item:nth-child(2)').classList.add('active');
                headerTitle.textContent = 'Pharmacy Pickup List';
                headerSubtitle.textContent = 'Manage and track pending pharmacy pickups';
                backButton.classList.add('show');
                statsSection.style.display = 'none';
                controlsSection.classList.add('show');
                dashboardContent.classList.add('hide');
                currentView = 'pickup';
                populateTable(clientsData, 'pickup');
                clientList.classList.add('show');
                isListVisible = true;
            } else if (section === 'vl') {
                document.querySelector('.menu-item:nth-child(3)').classList.add('active');
                headerTitle.textContent = 'Viral Load Due List';
                headerSubtitle.textContent = 'Clients due for viral load testing';
                backButton.classList.add('show');
                statsSection.style.display = 'none';
                controlsSection.classList.add('show');
                dashboardContent.classList.add('hide');
                currentView = 'vl';
                populateTable(vlDueData, 'vl');
                clientList.classList.add('show');
                isListVisible = true;
            } else if (section === 'index') {
                document.querySelector('.menu-item:nth-child(4)').classList.add('active');
                headerTitle.textContent = 'Index Backlog';
                headerSubtitle.textContent = 'Clients in index backlog queue';
                backButton.classList.add('show');
                statsSection.style.display = 'none';
                controlsSection.classList.add('show');
                dashboardContent.classList.add('hide');
                currentView = 'index';
                populateTable(indexBacklogData, 'index');
                clientList.classList.add('show');
                isListVisible = true;
            }
        }

        function goBack() {
            navigateToSection('dashboard');
